#include<stdio.h>
int main()
{
    int i,n;
    printf("enter the input elements:");
    scanf("%d",&n);
    int arr[n];
    printf("enter %d values:\n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("values in the reverse order:\n");
    for(i=n-1;i>=0;i--)
    {
        printf("%d",arr[i]);
    }
    printf("/n");
}
